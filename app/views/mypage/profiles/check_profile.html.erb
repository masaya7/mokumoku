<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>

  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
          <div class="ms-3">
            <h4 class="mb-3">Your avatar</h4>
            <h5>name:<%= @user.name %></h5>
            <h5>hobby:<%= @user.hobby %></h5>
            <h5>profile:<%= @user.profile %></h5>
              <div>
                <% if logged_in? && current_user != @user %>
                  <div id="follow-button-<%= @user.id %>">
                    <% if current_user.following?(@user) %>
                      <%= render 'relationships/unfollow_button', user: @user %>
                    <% else %>
                      <%= render 'relationships/follow_button', user: @user %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

